{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "esModuleInterop": true,
    "declaration": false,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "ES2022",
    "module": "es2020",
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "ix-icons": [
        "dist/ix-icons/ix-icons",
        "dist/ix-icons"
      ],
      "ix-scroll": [
        "dist/ix-scroll/ix-scroll",
        "dist/ix-scroll"
      ],
      "ix-dark": [
        "dist/ix-dark/ix-dark",
        "dist/ix-dark"
      ]
    },
    "useDefineForClassFields": false
  }
}